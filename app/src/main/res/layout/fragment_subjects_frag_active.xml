    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="education.slash.slash.view.Subjects.SubjectsFragActive">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height   ="match_parent"
        android:orientation="vertical">


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            >


            <include layout="@layout/progress_bar"/>


            <android.support.v7.widget.RecyclerView
                android:id="@+id/rvSubjectsActiveList"
                android:layout_width="match_parent"
                android:layout_height="match_parent">
            </android.support.v7.widget.RecyclerView>

        </RelativeLayout>
    </LinearLayout>

</RelativeLayout>
