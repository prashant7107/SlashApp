<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <LinearLayout
        android:id="@+id/linearlayout_inactiveLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="6dp"
        android:orientation="vertical"
        android:background="@color/inactive_layout_background"
        android:padding="6dp">

        <TextView
            android:id="@+id/subject_name_inactive"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="20dp"
            android:textStyle="bold"
            android:textColor="@color/inactive_heading_text"/>

        <TextView
            android:id="@+id/subject_status_inactive"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Inactive"
            android:textSize="15dp"
            android:textColor="@color/inactive_status_text"/>
    </LinearLayout>
</android.support.v7.widget.CardView>